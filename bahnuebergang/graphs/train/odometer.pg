graph Odometer {

    vars {
        int position_m [-1000..1000]
        int velocity_m [0..44]
    }

    states {Measuring}

    init: Measuring { velocity_m = 44 & position_m = -1000}

    transitions {

        Measuring -> Measuring {
            action {
                position_m := position;
                velocity_m := velocity
            }
        }
    }

}