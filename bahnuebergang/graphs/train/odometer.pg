graph Odometer {

    vars {
        int position_m [-200..50]
        int velocity_m [0..5]
    }

    states {Measuring, NotMesuaring}

    init: Measuring { velocity_m = 5 & position_m = -200}

    transitions {

        Measuring -> Measuring {
            guard { HodometerFault = No }
            action {
                position_m := position;
                velocity_m := velocity
            }
        }
    }

}