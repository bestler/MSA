graph Train {

    vars {
        int position [-2000..500]
        int velocity [0..44]
    }

    states {Drive}

    init: Drive {velocity = 44 & position = -2000}

    transitions {
        Drive -> Drive {
            action {
                position := position + velocity
            }
        }

        Drive -> Drive {
            guard { Brake = BrakeActive }
            action { velocity := velocity - a }
        }
    }

}